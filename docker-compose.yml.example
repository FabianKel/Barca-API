version: '3.8'

services:
  mysql:
    image: mysql:latest
    environment:
      MYSQL_DATABASE: blog_db
      MYSQL_USER: kelson
      MYSQL_PASSWORD: ninauser
      MYSQL_ROOT_PASSWORD: ninaroot
    volumes:
      - ./schema.sql:/docker-entrypoint-initdb.d/schema.sql
    ports:
      - "3333:3306"
  app:
        container_name: Barca_blog
        build: ./
        ports:
        - "22537:3000"
        depends_on:
            - mysql
        volumes:
            - .:/usr/src/app
            - /usr/src/app/node_modules
        restart: always